<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.so.dao.SoDao">

	<select id="get" resultType="com.bootdo.so.domain.SoDO">
		select `id`,`code`,`phone`,`address`,`receiver`,`express_no`,`ceate_time`,`express_amount`,`order_amount`,`pay_way` from doc_so where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.so.domain.SoDO">
		select `id`,`code`,`phone`,`address`,`receiver`,`express_no`,`ceate_time`,`express_amount`,`order_amount`,`pay_way` from doc_so
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="code != null and code != ''"> and code = #{code} </if>
		  		  <if test="phone != null and phone != ''"> and phone = #{phone} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="receiver != null and receiver != ''"> and receiver = #{receiver} </if>
		  		  <if test="expressNo != null and expressNo != ''"> and express_no = #{expressNo} </if>
		  		  <if test="ceateTime != null and ceateTime != ''"> and ceate_time = #{ceateTime} </if>
		  		  <if test="expressAmount != null and expressAmount != ''"> and express_amount = #{expressAmount} </if>
		  		  <if test="orderAmount != null and orderAmount != ''"> and order_amount = #{orderAmount} </if>
		  		  <if test="payWay != null and payWay != ''"> and pay_way = #{payWay} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from doc_so
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="code != null and code != ''"> and code = #{code} </if>
		  		  <if test="phone != null and phone != ''"> and phone = #{phone} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="receiver != null and receiver != ''"> and receiver = #{receiver} </if>
		  		  <if test="expressNo != null and expressNo != ''"> and express_no = #{expressNo} </if>
		  		  <if test="ceateTime != null and ceateTime != ''"> and ceate_time = #{ceateTime} </if>
		  		  <if test="expressAmount != null and expressAmount != ''"> and express_amount = #{expressAmount} </if>
		  		  <if test="orderAmount != null and orderAmount != ''"> and order_amount = #{orderAmount} </if>
		  		  <if test="payWay != null and payWay != ''"> and pay_way = #{payWay} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.so.domain.SoDO" useGeneratedKeys="true" keyProperty="id">
		insert into doc_so
		(
			`code`, 
			`phone`, 
			`address`, 
			`receiver`, 
			`express_no`, 
			`ceate_time`, 
			`express_amount`, 
			`order_amount`, 
			`pay_way`
		)
		values
		(
			#{code}, 
			#{phone}, 
			#{address}, 
			#{receiver}, 
			#{expressNo}, 
			#{ceateTime}, 
			#{expressAmount}, 
			#{orderAmount}, 
			#{payWay}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.so.domain.SoDO">
		update doc_so 
		<set>
			<if test="code != null">`code` = #{code}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="receiver != null">`receiver` = #{receiver}, </if>
			<if test="expressNo != null">`express_no` = #{expressNo}, </if>
			<if test="ceateTime != null">`ceate_time` = #{ceateTime}, </if>
			<if test="expressAmount != null">`express_amount` = #{expressAmount}, </if>
			<if test="orderAmount != null">`order_amount` = #{orderAmount}, </if>
			<if test="payWay != null">`pay_way` = #{payWay}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from doc_so where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from doc_so where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>