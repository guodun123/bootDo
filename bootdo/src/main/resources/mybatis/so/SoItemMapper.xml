<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.so.dao.SoItemDao">

	<select id="get" resultType="com.bootdo.so.domain.SoItemDO">
		select `id`,`so_id`,`sku_name`,`sku_id`,`price`,`sala_price`,`qty`,`create_time` from doc_so_item where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.so.domain.SoItemDO">
		select `id`,`so_id`,`sku_name`,`sku_id`,`price`,`sala_price`,`qty`,`create_time` from doc_so_item
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="soId != null and soId != ''"> and so_id = #{soId} </if>
		  		  <if test="skuName != null and skuName != ''"> and sku_name = #{skuName} </if>
		  		  <if test="skuId != null and skuId != ''"> and sku_id = #{skuId} </if>
		  		  <if test="price != null and price != ''"> and price = #{price} </if>
		  		  <if test="salaPrice != null and salaPrice != ''"> and sala_price = #{salaPrice} </if>
		  		  <if test="qty != null and qty != ''"> and qty = #{qty} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from doc_so_item
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="soId != null and soId != ''"> and so_id = #{soId} </if>
		  		  <if test="skuName != null and skuName != ''"> and sku_name = #{skuName} </if>
		  		  <if test="skuId != null and skuId != ''"> and sku_id = #{skuId} </if>
		  		  <if test="price != null and price != ''"> and price = #{price} </if>
		  		  <if test="salaPrice != null and salaPrice != ''"> and sala_price = #{salaPrice} </if>
		  		  <if test="qty != null and qty != ''"> and qty = #{qty} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.so.domain.SoItemDO" useGeneratedKeys="true" keyProperty="id">
		insert into doc_so_item
		(
			`so_id`, 
			`sku_name`, 
			`sku_id`, 
			`price`, 
			`sala_price`, 
			`qty`, 
			`create_time`
		)
		values
		(
			#{soId}, 
			#{skuName}, 
			#{skuId}, 
			#{price}, 
			#{salaPrice}, 
			#{qty}, 
			#{createTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.so.domain.SoItemDO">
		update doc_so_item 
		<set>
			<if test="soId != null">`so_id` = #{soId}, </if>
			<if test="skuName != null">`sku_name` = #{skuName}, </if>
			<if test="skuId != null">`sku_id` = #{skuId}, </if>
			<if test="price != null">`price` = #{price}, </if>
			<if test="salaPrice != null">`sala_price` = #{salaPrice}, </if>
			<if test="qty != null">`qty` = #{qty}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from doc_so_item where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from doc_so_item where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>